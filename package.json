{
    "name": "fireboard_task_generator",
    "version": "0.4.0",
    "main": "./build/electron/main.js",
    "scripts": {
        "dump": "dump-stlite-desktop-artifacts",
        "serve": "cross-env NODE_ENV=production electron .",
        "servewindows": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "files": [
            "build/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "icon": "assets/icon.ico",
            "target": "portable"
        }
    },
    "devDependencies": {
        "@stlite/desktop": "^0.78.2",
        "cross-env": "^7.0.3",
        "electron": "^39.2.3",
        "electron-builder": "^25.1.8"
    },
    "stlite": {
        "desktop": {
            "files": [
                "streamlit_app/*.py",
                "streamlit_app/pages/*.py",
                "streamlit_app/.streamlit/config.toml",
                ".streamlit/config.toml"
            ],
            "entrypoint": "streamlit_app/streamlit_app.py",
            "dependencies": [
                "numpy",
                "pandas"
            ],
            "nodeJsWorker": true,
            "nodefsMountpoints": {
                "/mnt": "{{home}}/FireboardTaskGenerator"
            }
        }
    }
}
